<head>
    <style>
        .container {
            display: flex;
        }
        .sidebar {
            width: 200px;
            padding: 20px;
            border-right: 1px solid #000;
        }
        .content {
            flex-grow: 1;
            padding: 20px;
        }
        .header, .footer {
            display: flex;
            justify-content: space-between;
            padding: 10px;
            border-bottom: 1px solid #000;
        }
        .header {
            border-bottom: 1px solid #000;
        }
        .footer {
            border-top: 1px solid #000;
        }
        .search, .categories {
            margin-bottom: 20px;
        }
        .categories ul {
            list-style: none;
            padding: 0;
        }
        .categories ul li {
            margin-bottom: 10px;
        }
        .recipe {
            display: flex;
            flex-wrap: wrap;
        }
        .recipe > div {
            border: 1px solid #000;
            box-sizing: border-box;
            margin: 5px;
            padding: 10px;
        }
        .title, .author, .subscribe, .description, .steps {
            width: 100%;
        }
        .image, .ingredients, .nutrition {
            width: 48%;
        }
        .steps, .description {
            width: 100%;
        }
    </style>
</head>

    <!-- Верхний колонтитул сайта -->
    <div class="header">
        <div>
            <a href="/">
                <img src="home-icon.png" alt="Главная" width="30" height="30"> <!-- Значок "Домой" -->
            </a>
            <span>Кулинарные рецепты</span>
        </div>
        <div>
            <a href="profile.html">
                <img src="user-icon.png" alt="Профиль">
            </a>
        </div>
    </div>
    
    <div class="container">
        <!-- Боковое меню с поиском и категориями -->
        <div class="sidebar">
            <div class="search">
                <label for="search">Поиск</label>
                <input type="text" id="search">
            </div>
            <div class="categories">
                <label for="categories">Категории</label>
                <ul>
                    <li><a href="breakfast">-Завтрак</a></li>
                    <li><a href="lunch.html">-Обед</a></li>
                    <li><a href="dinner.html">-Ужин</a></li>
                </ul>
            </div>
        </div>
        
        <!-- Основное содержание страницы рецепта -->
        <div class="content">
            <div class="recipe">
                <!-- Название блюда -->
                <div class="title">
                    <h1>Название блюда</h1>
                </div>
                
                <!-- Контактная информация автора -->
                <div class="author">
                    <p>Контактная информация автора</p>
                </div>
                
                <!-- Кнопка подписаться -->
                <div class="subscribe">
                    <button>Подписаться</button>
                </div>
                
                <!-- Блок изображения или видео -->
                <div class="image">
                    <p>IMG/MP4</p>
                </div>
                
                <!-- Блок энергетической ценности -->
                <div class="nutrition">
                    <h2>Энергетическая ценность</h2>
                    <ul>
                        <li>- а</li>
                        <li>- б</li>
                        <li>- с</li>
                    </ul>
                </div>
                
                <!-- Блок ингредиентов -->
                <div class="ingredients">
                    <h2>Ингредиенты</h2>
                    <ul>
                        <li>- а</li>
                        <li>- б</li>
                        <li>- с</li>
                    </ul>
                </div>
                
                <!-- Описание рецепта -->
                <div class="description">
                    <h2>Описание</h2>
                </div>
                
                <!-- Последовательность действий -->
                <div class="steps">
                    <h2>Последовательность</h2>
                    <p>Текст</p>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Нижний колонтитул сайта -->
    <div class="footer">
        <div>
            <a href="print.html">
                <img src="print-icon.png" alt="Печать">
            </a>
        </div>
        <div>
            <a href="share.html">
                <img src="share-icon.png" alt="Поделиться">
            </a>
        </div>
    </div>